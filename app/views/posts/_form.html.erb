    <% @post.errors.full_messages.each do |message| %>
      <div class="alert alert-danger" role="alert"><%= message %></div>
    <% end %>   

    <%= form_for @post, html:{multipart: true} do |f| %>
      <div class="form-group">
        <%= f.label :name, "Título" %><br>
        <%= f.text_field :name, class:"form-control" %>
      </div> 
      <div class="form-group">
        <%= f.label :avatar, "Foto principal" %>
        <%= f.file_field :avatar %>
      </div>
      <div class="form-group">
        <%= f.label :description, "Descrição" %><br>
        <%= f.text_field :description, class:"form-control" %>
      </div> 
      <div class="form-group">
        <%= f.label :body, "Corpo do Post" %><br>
        <%= f.cktext_area :body, class:"form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :category_id, "Categoria" %><br>
        <%= f.collection_select :category_id, @categories, :id, :name, {}, class: "form-control" %>
      </div>
      <div class="actions">
        <%= f.submit texto_da_acao, class:"btn btn-primary" %>
      </div>
    <% end %>
